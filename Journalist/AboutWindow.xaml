<Window x:Class="Journalist.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Journalist"
        mc:Ignorable="d"
        Title="About" Height="150" Width="400" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <Grid>
                <Separator Margin="15, 0"/>
                <Border Background="{Binding Background, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" Padding="2, 10" HorizontalAlignment="Center">
                    <TextBlock FontSize="12" >Repo</TextBlock>
                </Border>
            </Grid>
            <TextBlock HorizontalAlignment="Center" Margin="0, 10">
                <Hyperlink NavigateUri="https://github.com/halfdb/Journalist" RequestNavigate="Hyperlink_RequestNavigate">
                    https://github.com/halfdb/Journalist
                </Hyperlink>
            </TextBlock>
            <TextBlock HorizontalAlignment="Center" Margin="0, 20">© 2019 halfdB</TextBlock>
        </StackPanel>
    </Grid>
</Window>
